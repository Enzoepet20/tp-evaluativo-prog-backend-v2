<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Custom">
    <title>Registro de Pagos</title>
    
    <style>
      /* Estilos generales */
      body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
      }

      header {
        background-color: #0d6efd;
        color: white;
        padding: 10px 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .navbar-brand {
        margin-left: 20px;
        font-size: 1.25rem;
        font-weight: bold;
      }

      .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 5px 15px;
        border-radius: 5px;
        margin-right: 20px;
        cursor: pointer;
      }

      .container-fluid {
        display: flex;
        padding: 20px;
      }

      nav.sidebar {
        background-color: #0d6efd;
        padding: 20px;
        color: white;
        height: 100vh;
      }

      nav ul {
        list-style: none;
        padding: 0;
      }

      nav li {
        margin: 10px 0;
      }

      nav a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        display: block;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      nav a:hover {
        background-color: #0056b3;
      }

      main {
        flex: 1;
        background-color: white;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
      }

      h2 {
        margin: 0;
        font-size: 1.5rem;
        display: inline-block;
      }

      .badge {
        font-size: 1rem;
        padding: 10px;
        border-radius: 10px;
        color: white;
        margin-left: 10px;
      }

      .badge.bg-success {
        background-color: #198754;
      }

      img {
        max-width: 100px;
        border-radius: 50%;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      table th, table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
      }

      table th {
        background-color: #f1f1f1;
        font-weight: bold;
      }

      .btn.btn-primary {
        background-color: #0d6efd;
        color: white;
        border: none;
        padding: 5px 15px;
        border-radius: 5px;
        cursor: pointer;
      }

      .btn.btn-primary:hover {
        background-color: #0056b3;
      }

      .d-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .border-bottom {
        border-bottom: 2px solid #dee2e6;
        padding-bottom: 15px;
      }
    </style>
  </head>
  <body>
    <header class="navbar navbar-dark sticky-top bg-primary flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/">Beltran Enzo</a>
      <div class="navbar-nav">
        <div class="nav-item text-nowrap">

        </div>
      </div>
    </header>

    <div class="container-fluid">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-primary sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a type="button" class="px-3 btn btn-danger" href="/login">Logout</a>
            </li>
          </ul>
        </div>
      </nav>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h2>Dashboard</h2>
          <h2>Bienvenido:
            <% if (user) { %>
              <span class="badge bg-success"><%= user.name %></span>
              <img src="<%= user.profile_image %>" alt="Imagen de perfil">
            <% } %>
          </h2>
        </div> 

        <h3>LISTA DE PAGOS</h3>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Monto</th>
              <th>Fecha</th>
              <th>Id Usuario</th>
              <th>Recibo</th>
            </tr>
          </thead>
          <tbody>
            <% pagos.forEach(pago => { %>
              <tr>
                <td><%= pago.id %></td>
                <td><%= pago.amount %></td>
                <td><%= pago.date %></td>
                <td><%= pago.userId %></td>
                <td>
                  <a href="<%= reciboMap[pago.id] %>" class="btn btn-primary">Descargar Recibo</a>
              </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </main>
    </div>
  </body>
</html>
